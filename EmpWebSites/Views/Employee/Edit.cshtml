<div class="modal fade" id="myModal" tabindex="-1" role="dialog"  >

    <div class="modal-dialog" id="ManageData">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Employee record</h4>
            </div>
            <form name="act" method="post" ng-app="Employeeapp">
                <div class="modal-body" ng-controller="Employeecontroller">
                    <div class="form-group ">
                        <div class="col-lg-6 ">
                            <label>Ename</label>
                            <input type="text" ng-model="Employee.Ename" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-6">
                            <label>Email</label>
                            <input type="email" ng-model="Employee.Email" class=" form-control" />
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-6 ">
                            <label>Salary</label>
                            <input type="text" ng-model="Employee.Salary" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-6 ">
                            <label>Mobile</label>
                            <input type="text" ng-model="Employee.mobile" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group ">

                        <div class="col-lg-6 ">
                            <label>UserName</label>
                            <input type="text" ng-model="Employee.UserName" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-6 ">
                            <label>Password</label>
                            <input type="password" ng-model="Employee.Password" class="form-control" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" ng-click="updatedata()">Save</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

